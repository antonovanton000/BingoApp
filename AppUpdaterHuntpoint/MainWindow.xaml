<Window x:Class="AppUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppUpdater"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Border CornerRadius="12" Background="{StaticResource GradientBackgroundBrush}" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1">
        <Grid>
            <Image Margin="5" Source="/Images/tl_corner.png" Width="40" Opacity="0.3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image Margin="5" Source="/Images/tr_corner.png" Width="40" Opacity="0.3" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <Image Margin="5" Source="/Images/bl_corner.png" Width="40" Opacity="0.3" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
            <Image Margin="5" Source="/Images/br_corner.png" Width="40" Opacity="0.3" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            
            <TextBlock Text="HuntpointApp Updating..." Foreground="{StaticResource PrimaryTextBrush}" FontSize="18" FontFamily="Segoe UI Light" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="20,60,20,0"
                         BorderThickness="0" Background="Transparent" Foreground="{StaticResource AccentBrush}" Height="3"/>
        </Grid>
    </Border>
</Window>
