<UserControl x:Class="HuntpointApp.Controls.HuntpointObjective"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:HuntpointApp.Controls"
             xmlns:models="clr-namespace:HuntpointApp.Models"
             xmlns:cl="clr-namespace:HuntpointApp.Classes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=models:Objective, IsDesignTimeCreatable=False}"              
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="80" d:DesignWidth="510"
             Initialized="control_Initialized"
             RenderTransformOrigin="0.5, 0.5"
             x:Name="control">
    <UserControl.Resources>
        <cl:HuntpointCollorBackgroundConverter x:Key="BingoCollorBackgroundConverter"/>
        <cl:CountToMarginConverter x:Key="CountToMarginConverter"/>
    </UserControl.Resources>
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform />
            <RotateTransform />
        </TransformGroup>
    </UserControl.RenderTransform>
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Objective.IsReplaceNewAnimate, ElementName=control}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)" BeginTime="00:00:00">
                                    <DiscreteInt32KeyFrame KeyTime="00:00:00" Value="200"/>
                                </Int32AnimationUsingKeyFrames>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                             From="1" To="1.12" Duration="0:0:0.3" BeginTime="0:0:0"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                             From="1" To="1.12" Duration="0:0:0.3" BeginTime="0:0:0"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)" 
                                             From="0" To="5" Duration="0:0:0.1" BeginTime="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)" 
                                             From="0" To="-5" Duration="0:0:0.2" BeginTime="0:0:0.4"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)" 
                                             From="0" To="0" Duration="0:0:0.1" BeginTime="0:0:0.6"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" 
                                             From="1.12" To="1" Duration="0:0:0.3" BeginTime="0:0:1.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" 
                                             From="1.12" To="1" Duration="0:0:0.3" BeginTime="0:0:1.2"/>
                                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)" BeginTime="0:0:1.6">
                                    <DiscreteInt32KeyFrame KeyTime="00:00:00" Value="1"/>
                                </Int32AnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding Objective.IsMarked, ElementName=control}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)" BeginTime="00:00:00">
                                    <DiscreteInt32KeyFrame KeyTime="00:00:00" Value="200"/>
                                </Int32AnimationUsingKeyFrames>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 From="1" To="1.12" Duration="0:0:0.2" BeginTime="0:0:0"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 From="1" To="1.12" Duration="0:0:0.2" BeginTime="0:0:0"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" 
                                                 From="1.12" To="1" Duration="0:0:0.2" BeginTime="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" 
                                                 From="1.12" To="1" Duration="0:0:0.2" BeginTime="0:0:0.2"/>
                                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)" BeginTime="0:0:0.4">
                                    <DiscreteInt32KeyFrame KeyTime="00:00:00" Value="1"/>
                                </Int32AnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Border Focusable="True" MouseEnter="Border_MouseEnter" MouseDown="Border_MouseDown" PreviewKeyDown="Border_KeyDown"
            PreviewMouseRightButtonDown="Border_PreviewMouseRightButtonDown" PreviewMouseRightButtonUp="Border_PreviewMouseRightButtonUp"
            PreviewMouseWheel="Border_MouseWheel" CornerRadius="0"
            ToolTipService.IsEnabled="{Binding Objective.IsHidden, ElementName=control, Converter={StaticResource NotConverter}}" 
            ToolTip="{Binding Objective.Notes, ElementName=control}" x:Name="mainBorder">
        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="hover" Storyboard.TargetProperty="Opacity"
                                         From="0" To="0.12" Duration="0:0:0.08"
                                         />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="hover" Storyboard.TargetProperty="Opacity"
                                         From="0.12" To="0" Duration="0:0:0.08"
                                         />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="GotFocus">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="hover" Storyboard.TargetProperty="Opacity"
                                         From="0" To="0.19" Duration="0:0:0.08"
                                         />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="LostFocus">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="hover" Storyboard.TargetProperty="Opacity"
                                         From="0.12" To="0" Duration="0:0:0.08"
                                         />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="#181818"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsTransparent, ElementName=control}" Value="True">
                        <Setter Property="Background" Value="Transparent"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Image Stretch="Fill" HorizontalAlignment="Stretch" Opacity="0.8">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Regular}">
                                <Setter Property="Source" Value="/Images/obj_regular.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Rare}">
                                <Setter Property="Source" Value="/Images/obj_rare.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Unique}">
                                <Setter Property="Source" Value="/Images/obj_unique.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Legendary}">
                                <Setter Property="Source" Value="/Images/obj_legendary.png"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <Border Margin="2" Visibility="{Binding Objective.HasOnlyOneColor, ElementName=control, Converter={StaticResource NotBoolToVisibilityConverter}}"
                    ClipToBounds="True">
                <ItemsControl Margin="-20,0" Focusable="False" ItemsSource="{Binding Objective.ObjectiveColorsSorted, ElementName=control}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="42" RenderTransformOrigin="0.5,0.5" 
                                Background="{Binding Converter={StaticResource BingoCollorBackgroundConverter}}" Opacity="0.5">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform AngleX="-45"/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <Grid Background="{Binding Objective.FirstColor, ElementName=control, Converter={StaticResource BingoCollorBackgroundConverter}}"
                  Visibility="{Binding Objective.HasOnlyOneColor, ElementName=control, Converter={StaticResource BoolToVisConverter}}"
                  Margin="2" Opacity="0.5">


            </Grid>
            
            <Grid Background="{StaticResource AccentColorBrush}" Opacity="0" x:Name="hover" />

            <TextBlock Text="{Binding Objective.Name, ElementName=control}" TextWrapping="Wrap" Padding="4"
                       TextAlignment="Left" HorizontalAlignment="Left" Margin="20,0,40,0" LineStackingStrategy="BlockLineHeight"
                       LineHeight="14"
                       VerticalAlignment="Center" FontFamily="{StaticResource Manege}" FontSize="15">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Regular}">
                                <Setter Property="Foreground" Value="#FEFEFE"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Rare}">
                                <Setter Property="Foreground" Value="#99c9ec"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Unique}">
                                <Setter Property="Foreground" Value="#d3b7f5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Legendary}">
                                <Setter Property="Foreground" Value="#eabd88"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <TextBlock Text="{Binding Objective.Score, ElementName=control, StringFormat='+{0}'}" TextWrapping="Wrap" Padding="4"
                       TextAlignment="Right" HorizontalAlignment="Right" Margin="0,2,5,0" 
                       VerticalAlignment="Top" FontFamily="{StaticResource Manege}" FontSize="12">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Regular}">
                                <Setter Property="Foreground" Value="#FEFEFE"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Rare}">
                                <Setter Property="Foreground" Value="#99c9ec"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Unique}">
                                <Setter Property="Foreground" Value="#d3b7f5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.Type, ElementName=control}" Value="{x:Static models:ObjectiveType.Legendary}">
                                <Setter Property="Foreground" Value="#eabd88"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Border HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,3"
                    Background="#80000000" Width="18" Height="18" CornerRadius="15"
                    Visibility="{Binding Objective.IsPlayerScoreVisible ,ElementName=control, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock x:Name="tblScore" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Text="{Binding Objective.PlayerScore, ElementName=control}"  
                           FontSize="12" Foreground="#FEFEFE" 
                           FontFamily="{StaticResource Manege}"/>
            </Border>

            <TextBlock Visibility="{Binding Objective.IsGoal, ElementName=control, Converter={StaticResource BoolToVisConverter}}" 
                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,3" FontSize="13"
                       FontFamily="{StaticResource SegoeMDL2}" Text="&#xe082;" Foreground="{Binding ElementName=control, Path=SynergyBackground}"/>
            <ProgressBar IsIndeterminate="True" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" BorderThickness="0"
                         Background="Transparent" Foreground="{StaticResource AccentBrush}" Height="2"
                         Visibility="{Binding Objective.IsMarking, ElementName=control, Converter={StaticResource BoolToVisConverter}}"/>
            <Border x:Name="glowBorder" BorderThickness="2" BorderBrush="#BBFFFFFF" Margin="0" CornerRadius="0" Opacity="0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="0" Color="White" Opacity="1" BlurRadius="5" RenderingBias="Quality" />
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Objective.IsMarked, ElementName=control}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation From="0" To="1" Duration="0:0:0.3" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation From="1" To="0" BeginTime="0:0:3" Duration="0:0:0.5" Storyboard.TargetProperty="Opacity"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Objective.IsReplaceNewAnimate, ElementName=control}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation From="0" To="1" Duration="0:0:0.3" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation From="1" To="0" BeginTime="0:0:3" Duration="0:0:0.5" Storyboard.TargetProperty="Opacity"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border CornerRadius="8" Visibility="{Binding Objective.IsHidden, ElementName=control, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Collapsed">
                <Border.Background>
                    <LinearGradientBrush MappingMode="Absolute" StartPoint="0,0" EndPoint="4,4" SpreadMethod="Repeat">
                        <GradientStop Offset="0" Color="Black"/>
                        <GradientStop Offset="0.55" Color="Black"/>
                        <GradientStop Offset="0.55" Color="#101010"/>
                        <GradientStop Offset="1" Color="#101010"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Border>
</UserControl>
