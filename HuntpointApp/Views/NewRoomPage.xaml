<Page x:Class="HuntpointApp.Views.NewRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cnt="clr-namespace:HuntpointApp.Controls"
      xmlns:local="clr-namespace:HuntpointApp.Views"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:vm="clr-namespace:HuntpointApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="1440" d:DesignWidth="670"
      Title="NewRoomPage"
      x:Name="page">
    <Page.Resources>
        <Storyboard x:Key="WelcomeAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.0" Value="100"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.DataContext>
        <vm:NewRoomViewModel />
    </Page.DataContext>
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded" SourceObject="{Binding ElementName=page}">
            <behaviors:InvokeCommandAction Command="{Binding AppearingCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WelcomeAnimation}"/>
        </EventTrigger>
    </Page.Triggers>
    <Border x:Name="border" 
        Margin="0,0,0,0" Padding="40,0,40,40" VerticalAlignment="Stretch" Background="#030406" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Border.RenderTransform>
        <Grid x:Name="gr_createRoom" Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,40,0,40">
                <Grid>
                    <Grid VerticalAlignment="Top" Margin="0,0,0,0">
                        <Image Source="/Images/tl_corner.png" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.2" />
                        <Image Source="/Images/tr_corner.png" Height="80" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0.2"/>
                        <TextBlock Text="{DynamicResource mp_createnewroom}" Style="{StaticResource SubHeaderTextBlockBlockStyle2}"
                           FontFamily="{StaticResource Manege}" HorizontalAlignment="Center" Margin="0,20,0,0"
                               FontSize="35"/>
                    </Grid>
                    <Grid Visibility="{Binding IsBoardCreating, Converter={StaticResource NotBoolToVisibilityConverter}}" Margin="0,90,0,0">
                        <StackPanel>
                            <cnt:InputFieldControl Text="{Binding NewRoom.RoomName, Mode=TwoWay}" Placeholder="{DynamicResource mp_roomname}" Label="{DynamicResource mp_roomname}" Margin="0,0,0,10"
                                IsError="{Binding NewRoom.IsRoomNameError}" ErrorMessage="{DynamicResource mp_requieredfield}" IsRequiered="True"/>

                            <cnt:SelectFieldControl Placeholder="{DynamicResource mp_preset}" Label="{DynamicResource mp_preset}" ItemsSource="{Binding Presets}" 
                            Margin="0,0,0,5"
                            SelectedCurrentItem="{Binding NewRoom.BoardPreset, Mode=TwoWay}"
                            IsError="{Binding NewRoom.IsBoardPresetError}" ErrorMessage="{DynamicResource mp_requieredfield}"
                            DisplayProperty="PresetAndGame" IsRequiered="True" />

                            <cnt:SelectFieldControl Placeholder="{DynamicResource mp_legendaryobjective}" Label="{DynamicResource mp_legendaryobjective}" ItemsSource="{Binding NewRoom.LegendaryObjectives}" 
                                                Margin="0,0,0,5" SelectedCurrentItem="{Binding NewRoom.LegendaryObjectiveItem, Mode=TwoWay}" DisplayProperty="Name" 
                                                Visibility="{Binding NewRoom.BoardPreset, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <cnt:InputFieldControl Password="{Binding NewRoom.Password, Mode=TwoWay}" Placeholder="{DynamicResource mp_password}" Label="{DynamicResource mp_password}" Margin="0,0,0,10"
                                               IsPassword="True"/>

                            <WrapPanel Margin="0,40,0,0" Orientation="Vertical">
                                <cnt:SwitchControl Text="{DynamicResource mp_forfirstdeath}" IsChecked="{Binding NewRoom.IsForFirstDeath, Mode=TwoWay}" Margin="0,0,0,20"
                                                   Visibility="{Binding NewRoom.IsSekiro, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Visible"/>
                                <cnt:SwitchControl Text="{DynamicResource mp_extrapointsforlegendary}" IsChecked="{Binding NewRoom.IsLegendaryExtraPoints, Mode=TwoWay}" Margin="0,0,0,20"/>
                                <cnt:SwitchControl Text="{DynamicResource mp_hidecardinitial}" IsChecked="{Binding NewRoom.HideCard, Mode=TwoWay}" Margin="0,0,0,20"/>
                                <cnt:SwitchControl Text="{DynamicResource mp_autoboardreveal}" IsChecked="{Binding NewRoom.IsAutoBoardReveal, Mode=TwoWay}" Margin="0,0,0,20" />
                                <cnt:SwitchControl Text="{DynamicResource mp_createasspectat}" IsChecked="{Binding NewRoom.AsSpectator, Mode=TwoWay}" Margin="0,0,0,20"/>
                                <cnt:SwitchControl Text="{DynamicResource mp_generatesameseed}" IsChecked="{Binding NewRoom.IsGenerateSameSeeds, Mode=TwoWay}" Margin="0,0,0,20"
                                                   Visibility="{Binding NewRoom.IsNightreign, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Visible"/>
                            </WrapPanel>
                            <Button Style="{StaticResource FlatButtonStylePrimaryNoArrow}" 
                                Command="{Binding CreateNewRoomFinalyCommand}"
                                Content="{DynamicResource mp_createroom}" Width="250" HorizontalAlignment="Center" Margin="0,30,0,20"/>
                            <Button Style="{StaticResource FlatTextButtonStyleNoArrow}" VerticalAlignment="Bottom"
                                Content="{DynamicResource mp_cancel}" Command="{Binding CloseModalsCommand}" Width="150"/>
                        </StackPanel>
                    </Grid>
                    <!---->
                    <Grid Visibility="{Binding IsBoardCreating, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding NewRoom.RoomName, StringFormat={StaticResource mp_creating0}}" Style="{StaticResource FlatTextBlockStyle}"
                                   Margin="0,0,0,50" FontSize="25" HorizontalAlignment="Center" TextAlignment="Center"/>

                            <!--<Button Content="{DynamicResource mp_cancel}" Style="{StaticResource FlatButtonStyle}" Command="{Binding ConnectToRoomCancelCommand}" Margin="0,40,0,0"
                                Width="180"/>-->
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
