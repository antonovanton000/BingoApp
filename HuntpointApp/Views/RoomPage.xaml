<Page x:Class="HuntpointApp.Views.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lottie="clr-namespace:LottieSharp.WPF;assembly=LottieSharp"
      xmlns:local="clr-namespace:HuntpointApp.Views"
      xmlns:m="clr-namespace:HuntpointApp.Models"
      xmlns:cl="clr-namespace:HuntpointApp.Classes"
      xmlns:cnt="clr-namespace:HuntpointApp.Controls"
      xmlns:vm="clr-namespace:HuntpointApp.ViewModels"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"      
      mc:Ignorable="d" 
      d:DesignHeight="1140" d:DesignWidth="1840"
      Background="{StaticResource GradientBackgroundBrush}"
      Title="RoomPage"
      Loaded="page_Loaded"      
      x:Name="page">
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded" SourceObject="{Binding ElementName=page}">
            <behaviors:InvokeCommandAction Command="{Binding AppearingCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Page.Resources>
        <cl:HuntpointCollorNameConverter x:Key="HuntpointCollorNameConverter"/>
        <cl:HuntpointCollorBackgroundConverter x:Key="HuntpointCollorBackgroundConverter"/>
        <cl:HuntpointCollorBackgroundTransparentConverter x:Key="HuntpointCollorBackgroundTransparentConverter"/>
        <cl:HuntpointCollorConverter x:Key="HuntpointCollorConverter"/>
        <cl:CheckedCollorConverter x:Key="CheckedCollorConverter"/>
        <cl:TooltipTimeConverter x:Key="TooltipTimeConverter"/>
        <cl:EqualVisibilityConverter x:Key="EqualVisibilityConverter"/>
        <cl:StormStateToTextConverter x:Key="StormStateToTextConverter"/>
        <Storyboard x:Key="WelcomeAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="grid1" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="grid1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.9">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="grid1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.9">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-50">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WelcomeAnimation}"/>
        </EventTrigger>
    </Page.Triggers>
    <Page.DataContext>
        <vm:RoomPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Image Source="/Images/rectlight.png" VerticalAlignment="Bottom" Opacity="0.1"
               Stretch="Uniform"/>
        <lottie:LottieAnimationView        
                x:Name="bingoAnimation"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"                
                Margin="0,0,0,-200"
                ResourcePath="pack://application:,,,/Images/congrats.json"
                RepeatCount="2" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="620"/>
                <ColumnDefinition Width="1*" MinWidth="620"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="grid1" RenderTransformOrigin="0.5 0.5">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Grid.RenderTransform>
                <Viewbox Stretch="Uniform">
                    <Grid x:Name="grBoard" >
                        <Border Background="{StaticResource BackgroundBrush}" Margin="5" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0.9" BlurRadius="10"/>
                            </Border.Effect>
                            <Grid Width="450" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="41"/>
                                    <RowDefinition Height="41"/>
                                    <RowDefinition Height="41"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="42"/>
                                </Grid.RowDefinitions>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[0]}" Grid.Row="0" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[1]}" Grid.Row="1" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[2]}" Grid.Row="2" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[3]}" Grid.Row="3" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[4]}" Grid.Row="4" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[5]}" Grid.Row="5" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[6]}" Grid.Row="6" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[7]}" Grid.Row="7" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[8]}" Grid.Row="8" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[9]}" Grid.Row="9" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[10]}" Grid.Row="11" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[11]}" Grid.Row="12" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[12]}" Grid.Row="13" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[13]}" Grid.Row="14" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[14]}" Grid.Row="15" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[15]}" Grid.Row="16" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[16]}" Grid.Row="18" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[17]}" Grid.Row="19" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[18]}" Grid.Row="20" MarkCommand="{Binding MarkObjectiveCommand}"/>
                                <cnt:HuntpointObjective Objective="{Binding Room.Board.Objectives[19]}" Grid.Row="22" MarkCommand="{Binding MarkObjectiveCommand}"/>
                            </Grid>
                        </Border>
                        <Border Width="465" Margin="0,5" CornerRadius="5"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                                 
                                Background="{StaticResource BackgroundBrush}"
                                Visibility="{Binding Room.IsBoardHided, Converter={StaticResource BoolToVisConverter}}" 
                                x:Name="revealPanel">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0.9" BlurRadius="10"/>
                            </Border.Effect>
                            <behaviors:Interaction.Triggers>
                                <behaviors:EventTrigger EventName="MouseLeftButtonDown" SourceObject="{Binding ElementName=revealPanel}">
                                    <behaviors:InvokeCommandAction Command="{Binding RevealBoardCommand}" />
                                </behaviors:EventTrigger>
                            </behaviors:Interaction.Triggers>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="boardHidePanel" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.01" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="boardHidePanel" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.01" Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Grid>
                                <Image Source="/Images/tl_corner.png" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4" Opacity="0.15"/>
                                <Image Source="/Images/tr_corner.png" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" Opacity="0.15"/>
                                <Image Source="/Images/bl_corner.png" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="4" Opacity="0.15"/>
                                <Image Source="/Images/br_corner.png" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="4" Opacity="0.15"/>
                                <Border Background="#08FFFFFF" x:Name="boardHidePanel" Visibility="Collapsed"/>
                                <TextBlock Text="{Binding RevealPanelText}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Style="{StaticResource FlatTextBlockStyle}"/>
                            </Grid>
                        </Border>
                        <Border Width="465" Margin="0,5" CornerRadius="5"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                                                                 
                                Background="{StaticResource BackgroundBrush}"
                                Visibility="{Binding Room.IsAutoRevealBoardVisible, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0.9" BlurRadius="10"/>
                            </Border.Effect>
                            <Grid>
                                <Image Source="/Images/tl_corner.png" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4" Opacity="0.15"/>
                                <Image Source="/Images/tr_corner.png" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" Opacity="0.15"/>
                                <Image Source="/Images/bl_corner.png" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="4" Opacity="0.15"/>
                                <Image Source="/Images/br_corner.png" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="4" Opacity="0.15"/>
                                <Button Style="{StaticResource FlatButtonStylePrimaryNoArrow}" Content="{DynamicResource rp_startgame}" HorizontalAlignment="Center"
                                    VerticalAlignment="Center" Width="160" Command="{Binding StartGameCommand}"/>
                            </Grid>
                        </Border>
                        <Grid Margin="-22,10,0,0" HorizontalAlignment="Left" Visibility="{Binding Room.IsBoardHided, Converter={StaticResource NotBoolToVisibilityConverter}}" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="41"/>
                                <RowDefinition Height="41"/>
                                <RowDefinition Height="41"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="42"/>
                            </Grid.RowDefinitions>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="0" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="1" Text="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="2" Text="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="3" Text="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="4" Text="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="5" Text="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="6" Text="7" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="7" Text="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="8" Text="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#868686" Grid.Row="9" Text="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#48657a" Grid.Row="11" Text="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#48657a" Grid.Row="12" Text="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#48657a" Grid.Row="13" Text="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#48657a" Grid.Row="14" Text="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#48657a" Grid.Row="15" Text="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#48657a" Grid.Row="16" Text="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#a386d8" Grid.Row="18" Text="17" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#a386d8" Grid.Row="19" Text="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#a386d8" Grid.Row="20" Text="19" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Foreground="#715335" Grid.Row="22" Text="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Viewbox>
            </Grid>
            <Grid x:Name="grid" Grid.Column="1" Margin="0,0,0,0" RenderTransformOrigin="0.5 0.5">
                <Grid.RenderTransform>
                    <TranslateTransform X="0" Y="0"/>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,70,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                        <TextBlock FontSize="35" FontFamily="{StaticResource Manege}" Margin="0,10,0,0"
                                   Style="{StaticResource HeaderTextBlockBlockStyle}" Text="{Binding Room.RoomName}"
                                   MaxWidth="360" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal"  Margin="10,10,0,0" Visibility="{Binding Room.IsPractice, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                    VerticalAlignment="Center">
                            <Grid>
                                <ToggleButton Style="{StaticResource IconToggleButtonStyle}" 
                                              BorderThickness="0"
                                              IsHitTestVisible="{Binding ElementName=infoPopup, Path=IsOpen, Mode=OneWay, Converter={StaticResource NotConverter}}"
                                              Content="&#xe946;" x:Name="btnInfo"
                                              VerticalAlignment="Center" ToolTip="{DynamicResource rp_roominfo}" Foreground="#40FEFEFE">
                                </ToggleButton>
                                <Popup IsOpen="{Binding IsChecked, ElementName=btnInfo}" x:Name="infoPopup" StaysOpen="False"
                                       AllowsTransparency="True">
                                    <Border 
                                        Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}"                                 
                                        Padding="15">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <TextBlock Text="{DynamicResource rp_game}" Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0" />
                                                <TextBlock Text="{Binding Room.RoomSettings.GameName}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE"
                                                           Margin="0,0,5,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <TextBlock Text="{DynamicResource bm_presetname}" Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0" />
                                                <TextBlock Text="{Binding Room.RoomSettings.PresetName}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE"
                                                           Margin="0,0,5,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <TextBlock Text="{DynamicResource mp_extramode}" Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Room.RoomSettings.ExtraGameMode}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE" Margin="0,0,5,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" Visibility="{Binding IsSekiroGame, Converter={StaticResource BoolToVisConverter}}">
                                                <TextBlock Text="FirstDeath: " Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Room.RoomSettings.IsForFirstDeath}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE" Margin="0,0,5,0"/>
                                            </StackPanel>
                                            <StackPanel Visibility="{Binding IsNightreignGame, Converter={StaticResource BoolToVisConverter}}">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12" Visibility="{Binding Room.RoomSettings.IsSameSeedGeneration, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock Text="Nightreign Seed: " Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Room.NightreignSeed}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE" Margin="0,0,5,0"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12" Visibility="{Binding IsDebug, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock Text="Pattern: " Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Room.NightreignMapPattern}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE" Margin="0,0,5,0"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12" Visibility="{Binding IsDebug, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock Text="Pattern Describe: " Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Room.PatternDescribe}" Style="{StaticResource FlatTextBlockStyle}" 
                                                           TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#90FEFEFE" Margin="0,0,5,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Grid>
                            <Button Style="{StaticResource IconButtonStyle}" FontSize="18" Content="&#xE895;" Foreground="#40FEFEFE"
                                    Margin="10,0,0,0" Command="{Binding RefreshRoomCommand}" ToolTip="{DynamicResource rp_refreshroom}"
                                    Visibility="{Binding IsRefreshing, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                    VerticalAlignment="Center"/>
                            <cnt:SpinerControl IsSmall="True" SpinerColor="#40FEFEFE" Margin="10,0,0,0"
                           Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisConverter}}"/>
                        </StackPanel>
                        <Grid Margin="10,10,0,0" Visibility="{Binding Room.IsCreatorMode, Converter={StaticResource BoolToVisConverter}}">
                            <Button Style="{StaticResource IconButtonStyle}" FontSize="18"  Foreground="#40FEFEFE"
                                    Command="{Binding NewBoardCommand}" ToolTip="{DynamicResource rp_createnewboard}"
                                    Visibility="{Binding Room.IsCreatorMode, Converter={StaticResource BoolToVisConverter}}">
                                <Grid>
                                    <TextBlock Text="&#xECAA;" FontSize="20"/>
                                    <TextBlock Text="&#xE117;" FontSize="8" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                               Foreground="#AAFEFEFE"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <Grid VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,15,0,0" Visibility="{Binding Room.IsPractice, Converter={StaticResource NotBoolToVisibilityConverter}}">
                        <ToggleButton Style="{StaticResource FlatToggleButtonStyle}" 
                                      x:Name="btnFinishRun"
                                      BorderBrush="{StaticResource AccentBrush}"
                                      Width="140" FontSize="15"        
                                      BorderThickness="1"
                                      IsHitTestVisible="{Binding ElementName=finishRunPopup, Path=IsOpen, Mode=OneWay, Converter={StaticResource NotConverter}}"
                                      Content="{StaticResource rp_finishrun}" />
                        <Popup IsOpen="{Binding IsChecked, ElementName=btnFinishRun}" x:Name="finishRunPopup" StaysOpen="False"
                               AllowsTransparency="True" Placement="Left">
                            <Border Padding="10,0" BorderThickness="0">
                                <Border Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}"                     
                                    Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="{DynamicResource mes_surewantendrun}" Style="{StaticResource FlatTextBlockStyle}"/>
                                        <Grid Margin="0,20,0,0">
                                            <Button Content="{DynamicResource mes_yes}" Command="{Binding FinishRunCommand}" 
                                                HorizontalAlignment="Left" Click="CLoseFinishRunPopup_Click"
                                                Style="{StaticResource FlatButtonStyle}"
                                                Width="100"/>
                                            <Button Content="{DynamicResource mes_no}" Click="CLoseFinishRunPopup_Click"
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource FlatButtonStyle}"
                                                Width="100"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Margin="0,0,70,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>


                    <StackPanel Orientation="Horizontal">
                        <TextBlock Opacity="0.4" Margin="0,2,8,0" Text="&#xed0c;" FontSize="18" Style="{StaticResource SubHeaderTextBlockBlockStyle}" FontFamily="{StaticResource SegoeMDL2}"/>
                        <TextBlock Opacity="0.4" Text="{DynamicResource rp_feed}" FontSize="18" Style="{StaticResource SubHeaderTextBlockBlockStyle}" FontFamily="{StaticResource Manege}"/>
                    </StackPanel>
                    <ToggleButton HorizontalAlignment="Right" Margin="0,-10,45,0" Visibility="{Binding Room.IsPractice, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                            BorderThickness="0" Foreground="#33FEFEFE" ToolTip="{DynamicResource rp_muteunmutesound}"
                                            Style="{StaticResource IconToggleButtonStyle}" x:Name="btnMuteUnmute"
                                            Command="{Binding MuteUnmuteCommand}"
                                            IsChecked="{Binding IsSoundsOn, Mode=TwoWay}">
                        <Grid>
