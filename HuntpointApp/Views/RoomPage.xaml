                                        <Run Text="{Binding NewFeedEvent.Objective.Name, Mode=OneWay}" FontWeight="Bold">
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NewFeedEvent.Remove}" Value="False">
                                                        <Setter Property="Foreground" Value="{Binding NewFeedEvent.MessageColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NewFeedEvent.Remove}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                        </Run>
                                        <Run Text="{Binding NewFeedEvent.ChangeColorName, Mode=OneWay}" FontWeight="Bold" Foreground="{Binding NewFeedEvent.Color, Converter={StaticResource HuntpointCollorBackgroundConverter} }"/>
                                </TextBlock>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                VerticalAlignment="Top" Margin="8">
                                <TextBlock Text="{Binding NewFeedEvent.Timestamp, StringFormat='HH:mm:ss'}" Foreground="{StaticResource AccentColorBrush}"
                                        Margin="5,-3,5,0"
                                        FontWeight="Regular" FontSize="15"/>
                                <TextBlock Text="&#xe121;" Foreground="{StaticResource AccentColorBrush}" 
                                        FontFamily="{StaticResource SegoeMDL2}" FontWeight="Medium" FontSize="15"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Popup>
        </Grid>

        <Ellipse Height="10" Width="10" Fill="{StaticResource Green}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"
                 Visibility="{Binding Room.IsConnectedToServer, Converter={StaticResource BoolToVisConverter}}"/>
        <Ellipse Height="10" Width="10" Fill="{StaticResource Danger}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"
                 Visibility="{Binding Room.IsConnectedToServer, Converter={StaticResource NotBoolToVisibilityConverter}}"/>

        <Grid Background="#90000000" Visibility="{Binding IsReconnecting, Converter={StaticResource BoolToVisConverter}}">
            <Border Height="200" Width="350" BorderBrush="{StaticResource BorderColorBrush}" CornerRadius="8"
                    Background="{StaticResource BackgroundBrush}" BorderThickness="1" d:Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Reconnecting..." Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,0,20"/>
                    <cnt:SpinerControl IsActive="True" IsSmall="True" SpinerColor="{StaticResource AccentBrush}"/>
                    <Button Content="Cancel" Style="{StaticResource FlatTextButtonStyleNoArrow}" Margin="0,20,0,0"
                            Command="{Binding ReconnectCancelCommand}"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10">
            <Grid Margin="0,5,0,15" d:Visibility="Visible">
                <ToggleButton Style="{StaticResource IconToggleButtonStyleBig}" 
                  Background="#10FFFFFF" Foreground="#909090"
                  IsHitTestVisible="{Binding ElementName=playerInfoPopup, Path=IsOpen, Mode=OneWay, Converter={StaticResource NotConverter}}"
                  ToolTip="{DynamicResource rp_player}"
                  x:Name="btnPlayerInfo" Content="&#xE13D;">
                </ToggleButton>
                <Popup IsOpen="{Binding IsChecked, ElementName=btnPlayerInfo}" x:Name="playerInfoPopup" StaysOpen="False"
           AllowsTransparency="True" Placement="Bottom">
                    <Border 
                        Background="{StaticResource BackgroundBrush}" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}"                     
                        Padding="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Left"
                                Visibility="{Binding Room.CurrentPlayer.IsSpectator, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                VerticalAlignment="Bottom">
                            <TextBlock Text="&#xe13D;" FontSize="15" Foreground="#20FEFEFE"
                                    FontFamily="{StaticResource SegoeMDL2}"
                                    Style="{StaticResource SubHeaderTextBlockBlockStyle}" Margin="0,0,5,0"/>
                            <TextBlock Text="{DynamicResource rp_player}" FontSize="15" Foreground="#20FEFEFE"                                                
                                    Style="{StaticResource SubHeaderTextBlockBlockStyle}" Margin="0,0,5,0" FontFamily="{StaticResource Manege}"/>
                            <TextBlock Text="{Binding Room.CurrentPlayer.NickName}" FontSize="15"                                    
                                       FontWeight="Medium" Foreground="{Binding Room.CurrentPlayer.Color, Converter={StaticResource HuntpointCollorBackgroundConverter}}"
                                       Opacity="1" FontFamily="{StaticResource Manege}"
                                       Style="{StaticResource SubHeaderTextBlockBlockStyle}"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
            <Grid Margin="0,5,0,15">
                <ToggleButton Style="{StaticResource IconToggleButtonStyleBig}" d:Visibility="Visible"
                  Visibility="{Binding Room.CurrentPlayer.IsSpectator, Converter={StaticResource NotBoolToVisibilityConverter}}"                  
                  Background="{Binding Room.CurrentPlayer.Color, Converter={StaticResource HuntpointCollorBackgroundTransparentConverter}}"                  
                  Foreground="{Binding Room.CurrentPlayer.Color, Converter={StaticResource HuntpointCollorBackgroundConverter}}"
                  IsHitTestVisible="{Binding ElementName=changeColorPopup, Path=IsOpen, Mode=OneWay, Converter={StaticResource NotConverter}}"
                  ToolTip="{DynamicResource rp_changecolor}"
                  x:Name="btnChangeColor" Content="&#xE2b1;">
                </ToggleButton>
                <Popup IsOpen="{Binding IsChecked, ElementName=btnChangeColor}" x:Name="changeColorPopup" StaysOpen="False"
           AllowsTransparency="True" Placement="Bottom">
                    <Border 
Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}"                     
Width="375" Padding="15">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource rp_changecolor}" Style="{StaticResource FlatTextBlockStyle}"/>
                            <WrapPanel Orientation="Horizontal">
                                <WrapPanel Margin="0,10,0,0" x:Name="wrPanel">
                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=orange}"
Command="{Binding ChangeCollorCommand}" CommandParameter="orange"
Background="{StaticResource HuntpointColorOrrange}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="orange"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=red}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="red"
Background="{StaticResource HuntpointColorRed}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="red"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=blue}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="blue"
Background="{StaticResource HuntpointColorBlue}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="blue"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=green}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="green"
Background="{StaticResource HuntpointColorGreen}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="green"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=purple}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="purple"
Background="{StaticResource HuntpointColorPurple}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="purple"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=navy}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="navy"
Background="{StaticResource HuntpointColorNavy}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="navy"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=teal}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="teal"
Background="{StaticResource HuntpointColorTeal}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="teal"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=brown}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="brown"
Background="{StaticResource HuntpointColorBrown}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="brown"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=pink}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="pink"
Background="{StaticResource HuntpointColorPink}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="pink"/>

                                    <ToggleButton IsChecked="{Binding Room.CurrentPlayer.Color, Mode=OneWay, Converter={StaticResource CheckedCollorConverter}, ConverterParameter=yellow}" 
Command="{Binding ChangeCollorCommand}" CommandParameter="yellow"
Background="{StaticResource HuntpointColorYellow}" Width="80" Height="45" Style="{DynamicResource ColorToggleButtonStyle}" Margin="0,0,5,5" Click="ToggleButton_Click" Tag="yellow"/>
                                </WrapPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
            <Grid Margin="0,5,0,15">
                <Button Style="{StaticResource IconButtonStyleBig}"
                        Background="{StaticResource SuccessAlpha20}" Foreground="{StaticResource Success}"
                        HorizontalAlignment="Right"
                        Command="{Binding EndGameCommand}"
                        Content="&#xE7C1;"
                        ToolTip="{DynamicResource rp_finishgame}"
                        Visibility="{Binding IsFinishGameVisible, Converter={StaticResource BoolToVisConverter}}">
                </Button>
            </Grid>
            <Grid Margin="0,5,0,15">
                <ToggleButton Style="{StaticResource IconToggleButtonStyleBig}" x:Name="btnShare" 
                  Background="{StaticResource PurpleAlpha20}" Foreground="{StaticResource Purple}"                             
                  IsHitTestVisible="{Binding ElementName=mapPatternPopup, Path=IsOpen, Mode=OneWay, Converter={StaticResource NotConverter}}"
                  ToolTip="{DynamicResource rp_share}" d:IsHitTestVisible="True"
                  Content="&#xE72d;">
                </ToggleButton>
                <Popup IsOpen="{Binding IsChecked, ElementName=btnShare}" x:Name="sharePopup" StaysOpen="False"
               AllowsTransparency="True" d:IsOpen="True">
                    <Grid Background="#01000000">
                        <Border Margin="5"
                    Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" 
                    VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" 
                    BorderBrush="{StaticResource BorderColorBrush}"                                     
                    Padding="0,0,0,5">
                            <StackPanel>
                                <Button Visibility="{Binding Room.IsPractice, Converter={StaticResource NotBoolToVisibilityConverter}}" Style="{StaticResource MenuButtonStyle}" Click="ClosePopup_Click" Command="{Binding InvitePlayerCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE1E2;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                       Margin="10,0,10,0"/>
                                        <TextBlock Text="{DynamicResource rp_inviteplayer}" Margin="0,-2,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Visibility="{Binding Room.IsPractice, Converter={StaticResource NotBoolToVisibilityConverter}}" Style="{StaticResource MenuButtonStyle}" Click="ClosePopup_Click" Command="{Binding CopyRoomIdCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE16F;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                       Margin="10,0,10,0"/>
                                        <TextBlock Text="{DynamicResource rp_copyroomid}" Margin="0,-2,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Visibility="{Binding Room.IsPractice, Converter={StaticResource NotBoolToVisibilityConverter}}" Style="{StaticResource MenuButtonStyle}" Click="ClosePopup_Click" Command="{Binding SendResultsCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE1A5;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                       Margin="10,0,10,0"/>
                                        <TextBlock Text="{DynamicResource rp_sendresults}" Margin="0,-2,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButtonStyle}" Click="CreateBoardShot_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8A2;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                       Margin="10,0,10,0"/>
                                        <TextBlock Text="{DynamicResource rp_boardshot}" Margin="0,-2,0,0"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Popup>
                <Popup IsOpen="{Binding IsInvitePopupVisible}" x:Name="invitePopup" StaysOpen="False"
           AllowsTransparency="True">
                    <Border Margin="0,10,0,0"
                Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" 
                VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" 
                BorderBrush="{StaticResource BorderColorBrush}"                                     
                Padding="15" Width="270">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{DynamicResource rp_availableplayers}" Style="{StaticResource FlatTextBlockStyle}"
                           TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="{StaticResource PrimaryTextBrush}"
                           VerticalAlignment="Center"/>
                            <Button Style="{StaticResource IconButtonStyle}" Content="&#xE149;" Grid.Row="0" HorizontalAlignment="Right"
                        VerticalAlignment="Center" Command="{Binding RefreshAvailablePlayersCommand}"
                        ToolTip="Refresh"/>
                            <StackPanel Grid.Row="1">
                                <Grid Height="200">
                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                        <ListView ItemsSource="{Binding AvailablePlayers}" Background="Transparent" BorderThickness="0"
                                  ItemContainerStyle="{StaticResource ListViewContainerStyle}" SelectionMode="Single"
                                  SelectedItem="{Binding SelectedPlayer, Mode=TwoWay}" d:ItemsSource="{d:SampleData ItemCount=5}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate DataType="m:BingoAppPlayer">
                                                    <Border Padding="5,10" CornerRadius="8">
                                                        <Grid>
                                                            <TextBlock Text="{Binding NickName}" Style="{StaticResource SubHeaderTextBlockBlockStyle}"
                                                       FontSize="15"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                    <Grid Visibility="{Binding AvailablePlayers.Count, Converter={StaticResource NotCountToVisibilityConverter}}">
                                        <TextBlock Text="{DynamicResource rp_therearecurrently}" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"
                                       Style="{StaticResource FlatTextBlockStyle}"/>
                                    </Grid>
                                </Grid>

                                <Button Style="{StaticResource FlatButtonStylePrimaryNoArrow}" Content="{DynamicResource rp_sendinvite}" 
                            Command="{Binding SendInviteCommand}" Margin="0,0,0,10" Click="CloseInvitePopup_Click"
                            IsEnabled="{Binding SelectedPlayer, Converter={StaticResource NullToBool}}"/>

                                <Button Style="{StaticResource FlatButtonStyle}" Content="{DynamicResource rp_cancel}" 
                            Margin="0,0,0,10" Click="CloseInvitePopup_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>
            <Grid Margin="0,5,0,15" Visibility="{Binding IsNightreignGame, Converter={StaticResource BoolToVisConverter}}">
                <ToggleButton Style="{StaticResource IconToggleButtonStyleBig}" x:Name="btnMapPattern" 
                    Background="{StaticResource BlueishAlpha20}" Foreground="{StaticResource Blueish}"
                    HorizontalAlignment="Right"                    
                    Content="&#xE707;"
                    Command="{Binding ShowMapPatternSelectCommand}"
                    Visibility="{Binding Room.IsRevealed, Converter={StaticResource BoolToVisConverter}}">
                </ToggleButton>
            </Grid>
        </StackPanel>
        <Button d:Content="&#xE2b4;" Margin="10" Command="{Binding OpenExternalWindowCommand}" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Foreground="#40FFFFFF" Visibility="Visible">
            <Button.Style>
                <Style BasedOn="{StaticResource IconButtonStyleBig}" TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExternalWindowOpened}" Value="True">
                            <Setter Property="Content" Value="&#xE2b3;"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsExternalWindowOpened}" Value="False">
                            <Setter Property="Content" Value="&#xE2b4;"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="{Binding IsSekiroGame, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Visible">
            <Image Source="/Images/sekiro.png" Width="42" Margin="0,0,8,8">
                <Image.Clip>
                    <RectangleGeometry Rect="0,0,42,42" RadiusX="4" RadiusY="4"/>
                </Image.Clip>
            </Image>
            <Ellipse Height="10" Width="10" Fill="{StaticResource Green}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-3,3,0"
                     Visibility="{Binding IsSekiroAttached, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Visible"/>
            <Ellipse Height="10" Width="10" Fill="{StaticResource Danger}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-3,3,0"
                     Visibility="{Binding IsSekiroAttached, Converter={StaticResource NotBoolToVisibilityConverter}}" d:Visibility="Visible"/>
        </Grid>
    </Grid>
</Page>
