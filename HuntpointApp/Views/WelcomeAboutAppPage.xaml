<Page x:Class="HuntpointApp.Views.WelcomeAboutAppPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cnt="clr-namespace:HuntpointApp.Controls"
      xmlns:local="clr-namespace:HuntpointApp.Views"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:vm="clr-namespace:HuntpointApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="1440" d:DesignWidth="670"
      Title="NewRoomPage"
      x:Name="page">
    <Page.DataContext>
        <vm:WelcomeAboutAppViewModel/>
    </Page.DataContext>
    <Page.Resources>
        <Storyboard x:Key="WelcomeAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-50"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="textBlock" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="0.01"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="textBlock1" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="textBlock2" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.7000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="textBlock2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="30"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.7000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="textBlock" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="30"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.5000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="textBlock1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="30"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="updateAppAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="updatePanel" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="updatePanel" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="50"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded" SourceObject="{Binding ElementName=page}">
            <behaviors:InvokeCommandAction Command="{Binding AppearingCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource WelcomeAnimation}"/>
        </EventTrigger>
    </Page.Triggers>
    <Grid HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical" Margin="10,130,10,0">
            <Image x:Name="image" Source="/Images/mainimg_frame.png" Width="670" Margin="0,0,0,40" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:Name="textBlock" Text="{DynamicResource mp_welcometext1}"
               Style="{StaticResource FlatTextBlockStyle}"
               TextWrapping="Wrap" FontFamily="{StaticResource Manege}" FontSize="19" Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="textBlock1" Text="{DynamicResource mp_welcometext2}"
               Style="{StaticResource FlatTextBlockStyle}"
               TextWrapping="Wrap" FontFamily="{StaticResource Manege}" FontSize="19" Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="textBlock2" Text="{DynamicResource mp_welcometext3}"
               Style="{StaticResource FlatTextBlockStyle}"
               TextWrapping="Wrap" FontFamily="{StaticResource Manege}" FontSize="19" Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20">
            <ToggleButton Style="{StaticResource IconToggleButtonStyleBig}" x:Name="btnNightreign" 
               Background="#00000000" IsHitTestVisible="{Binding ElementName=nightreignPopup, Path=IsOpen, Mode=OneWay, Converter={StaticResource NotConverter}}"
               ToolTip="Elden Ring Nightreign" d:IsHitTestVisible="True" Width="80" Height="80">
                <Image Source="/Images/nightreign_logo.png" Opacity="0.6" />
            </ToggleButton>
            <Popup IsOpen="{Binding IsChecked, ElementName=btnNightreign}" x:Name="nightreignPopup" StaysOpen="False"
    AllowsTransparency="True" d:IsOpen="True" Placement="Left">
                <Grid Background="#01000000">
                    <Border Margin="5"
         Background="{StaticResource BackgroundBrush}" HorizontalAlignment="Left" 
         VerticalAlignment="Top" CornerRadius="6" BorderThickness="1" 
         BorderBrush="{StaticResource BorderColorBrush}"                                     
         Padding="0,0,10,5">
                        <StackPanel>
                            <Button Style="{StaticResource MenuButtonStyle}" Click="CloseNightreignPopup" Visibility="{Binding IsLaunchGameVisible, Converter={StaticResource BoolToVisConverter}}"
                                    Command="{Binding LaunchGameCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE945;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                               Margin="10,0,10,0"/>
                                    <TextBlock Text="{DynamicResource mp_launchgame}" Margin="0,-2,0,0"/>
                                </StackPanel>
                            </Button>
                            <!--<Button Style="{StaticResource MenuButtonStyle}" Click="CloseNightreignPopup">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE823;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                                Margin="10,0,10,0"/>
                                    <TextBlock Text="{DynamicResource mp_stormtimer}" Margin="0,-2,0,0"/>
                                </StackPanel>
                            </Button>-->
                            <Button Style="{StaticResource MenuButtonStyle}" Click="CloseNightreignPopup" Command="{Binding ShowMapSelectorCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE707;" FontFamily="{StaticResource SegoeMDL2}" FontSize="17"
                                               Margin="10,0,10,0"/>
                                    <TextBlock Text="{DynamicResource mp_mapselector}" Margin="0,-2,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Popup>
        </Grid>



        <Border x:Name="updatePanel" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="40" CornerRadius="12" 
                Visibility="{Binding IsAppUpdateVisible, Converter={StaticResource BoolToVisConverter}}"
                Background="{StaticResource BackgroundBrush}" Padding="30" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="{StaticResource AccentColor}" Opacity="0.8"/>
            </Border.Effect>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAppUpdateVisible}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                         From="20" To="0" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid Margin="-23">
                    <Image Source="/Images/tl_corner.png" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.2" />
                    <Image Source="/Images/tr_corner.png" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0.2"/>
                    <Image Source="/Images/bl_corner.png" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Opacity="0.2"/>
                    <Image Source="/Images/br_corner.png" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.2"/>
                </Grid>
                <StackPanel>
                    <TextBlock Text="{DynamicResource mes_updateapp}" Style="{StaticResource FlatTextBlockStyle}" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Command="{Binding UpdateAppCommand}" Content="{DynamicResource mes_yes}" HorizontalAlignment="Left" Style="{StaticResource FlatButtonStylePrimaryNoArrow}" Height="30" Width="50" Margin="0,0,20,0"/>
                        <Button Command="{Binding UpdateAppCancelCommand}" Content="{DynamicResource mes_no}" HorizontalAlignment="Right" Style="{StaticResource FlatButtonStyle}" Height="30" Width="50" Margin="20,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
