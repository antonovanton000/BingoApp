                case "bingo":
                    return "bingo-color";
                case "win":
                    return "win-color";
                case "color":
                    return "message-color-accent";
                case "newsquare":
                    return "message-color-accent";
                case "unhudesquare":
                    return "message-color-accent";
            }
            return "message-color-accent";
        }

