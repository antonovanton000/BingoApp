@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Hero Area -->
<section class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-12 col-12">
                <div class="hero-content">
                    <h4>BingoApp</h4>
                    <h1 data-i18n="[html]i-header-1">
                        Быстро и легко играйте<br /> в бинго с друзьями!
                    </h1>
                    <p data-i18n="i-text-1">
                        Приложение позволяет вам играть в бинго с друзьями в любое время.
                    </p>
                    <div class="button">
                        <a href="@ViewBag.DownloadLink" class="btn "><span data-i18n="l-download">Скачать</span> @ViewBag.Version</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-12">
                <div class="hero-image wow fadeInRight" data-wow-delay=".4s">
                    <img class="main-image" src="~/assets/images/screen/main.png" alt="#">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hero Area -->

<section class="freatures section" id="features">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-12">
                <div class="image wow fadeInLeft" data-wow-delay=".3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInLeft;">
                    <img src="~/assets/images/screen/features.png" alt="#">
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="content">
                    <h3 class="heading wow fadeInUp" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
                        <span data-i18n="i-header-2">Главные достоинства</span>
                        <span data-i18n="i-header-3">
                            Откройте для себя новый способ весело проводить время с BingoApp.
                        </span>
                    </h3>
                    <!-- Start Single Feature -->
                    <div class="single-feature wow fadeInUp" data-wow-delay=".6s" style="visibility: visible; animation-delay: 0.6s; animation-name: fadeInUp;">
                        <div class="f-icon">
                            <i class="lni lni-display-alt"></i>
                        </div>
                        <h4 data-i18n="i-header-4">Простота использования</h4>
                        <p data-i18n="i-text-4">
                            Интуитивно понятный интерфейс, который позволяет начать игру в считанные секунды.
                        </p>
                    </div>
                    <!-- End Single Feature -->
                    <!-- Start Single Feature -->
                    <div class="single-feature wow fadeInUp" data-wow-delay=".7s" style="visibility: visible; animation-delay: 0.7s; animation-name: fadeInUp;">
                        <div class="f-icon">
                            <i class="lni lni-users"></i>
                        </div>
                        <h4 data-i18n="i-header-5">Мультиплеер</h4>
                        <p data-i18n="i-text-5">
                            Играйте с друзьями или присоединяйтесь к открытым играм с игроками со всего мира.
                        </p>
                    </div>
                    <!-- End Single Feature -->
                    <!-- Start Single Feature -->
                    <div class="single-feature wow fadeInUp" data-wow-delay="0.8s" style="visibility: visible; animation-delay: 0.8s; animation-name: fadeInUp;">
                        <div class="f-icon">
                            <i class="lni lni-vector"></i>
                        </div>
                        <h4 data-i18n="i-header-6">Разнообразие режимов</h4>
                        <p data-i18n="i-text-6">
                            Выбирайте из различных игровых режимов, чтобы сделать каждую игру уникальной.
                        </p>
                    </div>
                    <!-- End Single Feature -->
                </div>
            </div>
        </div>
    </div>
</section>


<div class="services section">
