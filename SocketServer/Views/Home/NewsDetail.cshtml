@using System.Globalization
@model SocketServer.Controllers.NewsItem
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 offset-lg-3 col-md-12 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@Model.Title</h1>
                    <ul class="breadcrumb-nav">
                        <li><a href="/">Главная</a></li>
                        <li><a href="/home/news">Новости</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->


<section class="section blog-single">
    <div class="container">
        <div class="row">
            <div class="offset-lg-2 col-lg-10 col-md-12 col-12">
                <div class="single-inner">
                    <div class="post-details">
                        <div class="main-content-head">                            
                            <div class="meta-information">
                                <h2 class="post-title">
                                    @Model.Title
                                </h2>
                                <!-- End Meta Info -->
                                <ul class="meta-info">                                    
                                    <li>
                                        <a href="javascript:void(0)"><i class="lni lni-calendar"></i> @Model.Date.ToString("dd MMM yyyy", new CultureInfo("ru-RU"))</a>
                                    </li>                                    
                                </ul>
                                <!-- End Meta Info -->
                            </div>
                            <div class="detail-inner">
                                @Html.Raw(Model.Content)
                            </div>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </div>
</section>