<UserControl x:Class="WheelGame.Controls.WheelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WheelGame.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="540">
    <UserControl.Resources>
        <Storyboard x:Key="RotateWheel">
            <DoubleAnimation Storyboard.TargetName="cnv"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                     From="0" To="0" Duration="0:0:5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Canvas Height="500" Width="500" RenderTransformOrigin="0.5,0.5" x:Name="cnv">
            <Canvas.RenderTransform>
                <RotateTransform Angle="0" />
            </Canvas.RenderTransform>
        </Canvas>
        <Path Data="M0,20 L20,0 L20,40 L0,20" Fill="{StaticResource AccentBrush}" Stroke="{StaticResource AccentColorBrush2}" 
              Stretch="Fill" StrokeThickness="1" StrokeLineJoin="Bevel" Height="30" Width="30" VerticalAlignment="Center"
              HorizontalAlignment="Center" Margin="0,0,-520,0" />

    </Grid>
</UserControl>
