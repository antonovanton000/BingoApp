<Page x:Class="WheelGame.Views.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
      xmlns:local="clr-namespace:WheelGame.Views"
      xmlns:m="clr-namespace:WheelGame.Models"
      xmlns:cl="clr-namespace:WheelGame.Classes"
      xmlns:cnt="clr-namespace:WheelGame.Controls"
      xmlns:vm="clr-namespace:WheelGame.ViewModels"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"      
      mc:Ignorable="d" 
      d:DesignHeight="1140" d:DesignWidth="1840"
      Background="{StaticResource GradientBackgroundBrush}"
      Title="RoomPage"
      Loaded="page_Loaded"      
      x:Name="page">
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded" SourceObject="{Binding ElementName=page}">
            <behaviors:InvokeCommandAction Command="{Binding AppearingCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Page.Resources>
        <cl:PlayerColorIndexConverter x:Key="PlayerColorIndexConverter"/>
        <cl:NotNullToVisibility x:Key="NotNullToVisibility"/>
        <cl:NullToVisibility x:Key="NullToVisibility"/>
    </Page.Resources>
    <Page.Triggers>

    </Page.Triggers>
    <Page.DataContext>
        <vm:RoomPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid Margin="80,10,80,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="600" MaxWidth="600"/>
                <ColumnDefinition Width="1*" MinWidth="600"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="grid1" RenderTransformOrigin="0.5 0.5" Margin="0,20,0,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Border BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Background="{StaticResource BackgroundColorBrushDark}"
                            CornerRadius="12" Padding="25">
                        <Viewbox Stretch="Uniform" Visibility="{Binding Room.IsGameStarted, Converter={StaticResource BoolToVisConverter}}">
                            <Grid x:Name="grBoard">
                                <cnt:WheelControl x:Name="earlyWheel" Objectives="{Binding Room.EarlyWheel.Objectives, Mode=TwoWay}" SelectedObjective="{Binding CurrentObjective, Mode=TwoWay}" 
                                                  SectorBackgroundBrush="{StaticResource BackgroundBrush}" SectorForegroundBrush="{StaticResource PrimaryTextBrush}"
                                                  Visibility="{Binding Room.IsEarlyWheelVisible, Converter={StaticResource BoolToVisConverter}}"
                                                  WheelBorderBrush="#999999"/>
                                <cnt:WheelControl x:Name="middleWheel" Objectives="{Binding Room.MiddleWheel.Objectives, Mode=TwoWay}" SelectedObjective="{Binding CurrentObjective, Mode=TwoWay}" 
                                                  SectorBackgroundBrush="{StaticResource BackgroundBrush}" SectorForegroundBrush="{StaticResource PrimaryTextBrush}"
                                                  Visibility="{Binding Room.IsMiddleWheelVisible, Converter={StaticResource BoolToVisConverter}}"
                                                  WheelBorderBrush="{StaticResource Blue}"/>
                                <cnt:WheelControl x:Name="endWheel" Objectives="{Binding Room.EndWheel.Objectives, Mode=TwoWay}" SelectedObjective="{Binding CurrentObjective, Mode=TwoWay}" 
                                                  SectorBackgroundBrush="{StaticResource BackgroundBrush}" SectorForegroundBrush="{StaticResource PrimaryTextBrush}"
                                                  Visibility="{Binding Room.IsEndWheelVisible, Converter={StaticResource BoolToVisConverter}}"
                                                  WheelBorderBrush="{StaticResource Purple}"/>
                            </Grid>
                        </Viewbox>
                    </Border>
                </Grid>
                <Grid Visibility="{Binding Room.IsGameStarted, Converter={StaticResource NotBoolToVisibilityConverter}}">
                    <Button Content="Начать игру" Style="{StaticResource FlatButtonStylePrimaryNoArrow}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Width="140"
                            Visibility="{Binding Room.IsCreatorMode, Converter={StaticResource BoolToVisConverter}}"
                            Command="{Binding StartGameCommand}" Grid.Row="1" />
                </Grid>
                <Grid Grid.Row="2">
                    <Border BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Background="{StaticResource BackgroundColorBrushDark}"
                            CornerRadius="12" Padding="10" Grid.Row="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" VerticalAlignment="Top">
                                <Run FontFamily="{StaticResource SegoeMDL2}" Text="&#xE00C;" FontSize="16"/>
                                <Run Text="Дебаф"/>
                            </TextBlock>
                            <Button Style="{StaticResource IconButtonStyle}" HorizontalAlignment="Right" Content="&#xE149;" Margin="0,-5,-5,0"
                                    Command="{Binding GetNewRandomDebuffCommand}"/>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource SubHeaderTextBlockBlockStyle2}"
                                       Text="{Binding Room.CurrentDebuff}" Grid.RowSpan="2"/>


                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Margin="40,20,0,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Background="{StaticResource BackgroundColorBrushDark}"
                        CornerRadius="12" Padding="20,0">
                    <Grid x:Name="grid"  Margin="20" RenderTransformOrigin="0.5 0.5"
                      Visibility="{Binding Room.IsGameStarted, Converter={StaticResource BoolToVisConverter}}" d:Visibility="Visible">
                        <StackPanel Grid.Row="1" Margin="0" Visibility="{Binding CurrentObjective, Converter={StaticResource NotNullToVisibility}}">
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Text="Текущее задание:" Margin="0,0,0,5"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" 
                                            Visibility="{Binding Room.CurrentPlayer.IsFinished, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                            Margin="-33,0,0,0">
                                    <Button Style="{StaticResource IconButtonStyleColored}" Content="&#xE10B;" VerticalAlignment="Center"
                                        Background="{StaticResource SuccessAlpha20}" Foreground="{StaticResource Success}"
                                        Visibility="{Binding CurrentObjective.IsMarked, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                        Command="{Binding MarkObjectiveCommand}" Height="27" Width="27" FontSize="14"/>
                                    <Button Style="{StaticResource IconButtonStyleColored}" Content="&#xE10A;" VerticalAlignment="Center"
                                        Background="{StaticResource DangerAlpha20}" Foreground="{StaticResource Danger}"
                                        Visibility="{Binding CurrentObjective.IsMarked, Converter={StaticResource BoolToVisConverter}}"
                                        Command="{Binding MarkObjectiveCommand}" Height="27" Width="27" FontSize="14"/>
                                </StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderTextBlockBlockStyle}" FontSize="20" FontWeight="Bold" Text="{Binding CurrentObjective.Name}" Margin="0,0,10,0" 
                                       VerticalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding CurrentObjective.PlayersOrdered}" VerticalAlignment="Center" Margin="5,0,0,0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,10,0">
                                                <Border Background="{Binding PlayerIndex, Converter={StaticResource PlayerColorIndexConverter}}"
                                                        Height="27" Width="27" CornerRadius="3">

                                                    <TextBlock Text="&#xE081;" FontFamily="{StaticResource SegoeMDL2}"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                                               Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <Border Height="1" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Margin="0,25"/>
                            <TextBlock Style="{StaticResource FlatTextBlockStyle}" Text="Доп. задания:" Margin="0,0,10,10"/>
                            <ItemsControl ItemsSource="{Binding CurrentObjective.Modifiers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,10" MinHeight="40">
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Orientation="Horizontal" Visibility="{Binding ElementName=page, Path=DataContext.Room.CurrentPlayer.IsFinished, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                                            Margin="-33,0,0,0">
                                                    <Button Style="{StaticResource IconButtonStyleColored}" Content="&#xE10B;" VerticalAlignment="Center"
                                                            Background="{StaticResource SuccessAlpha20}" Foreground="{StaticResource Success}"
                                                            Visibility="{Binding IsMarked, Converter={StaticResource NotBoolToVisibilityConverter}}"
                                                            Command="{Binding DataContext.MarkObjectiveModifierCommand,ElementName=page}" CommandParameter="{Binding }"
                                                            Height="27" Width="27" FontSize="14"/>
                                                    <Button Style="{StaticResource IconButtonStyleColored}" Content="&#xE10A;" VerticalAlignment="Center"
                                                            Background="{StaticResource DangerAlpha20}" Foreground="{StaticResource Danger}"
                                                            Visibility="{Binding IsMarked, Converter={StaticResource BoolToVisConverter}}"
                                                            Command="{Binding DataContext.MarkObjectiveModifierCommand,ElementName=page}" CommandParameter="{Binding }"
                                                            Height="27" Width="27" FontSize="14"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Name}" Style="{StaticResource SubHeaderTextBlockBlockStyle}" FontSize="20" FontWeight="Bold" Margin="0,0,10,0"
                                                       VerticalAlignment="Center"/>
                                                <ItemsControl ItemsSource="{Binding PlayersOrdered}" VerticalAlignment="Center" Margin="0,0,0,0">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,0,10,0">
                                                                <Border Background="{Binding PlayerIndex, Converter={StaticResource PlayerColorIndexConverter}}"
                                                                        Height="27" Width="27" CornerRadius="3">
                                                                    <TextBlock Text="&#xE081;" FontFamily="{StaticResource SegoeMDL2}"
                                                                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                                Foreground="White"/>
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <Button Style="{StaticResource FlatButtonStylePrimaryNoArrow}" Content="Завершить" Width="120" Margin="0,10,0,0"
                                Command="{Binding FinishObjectiveCommand}" HorizontalAlignment="Right" VerticalAlignment="Top"
                                IsEnabled="{Binding Room.CurrentPlayer.IsFinished, Converter={StaticResource NotConverter}}"
                                Visibility="{Binding CurrentObjective, Converter={StaticResource NotNullToVisibility}}"/>
                        <Grid Grid.Row="1" Visibility="{Binding CurrentObjective, Converter={StaticResource NullToVisibility}}">
                            <Grid Visibility="{Binding Room.CurrentPlayer.IsPlayerTurn, Converter={StaticResource BoolToVisConverter}}">
                                <Button Content="Крутить колесо" Style="{StaticResource FlatButtonStylePrimaryNoArrow}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center" Width="140"                        
                                        IsEnabled="{Binding CurrentObjective, Converter={StaticResource NotNullToBool}}"
                                        Command="{Binding RotateWheelCommand}" />
                            </Grid>
                            <Grid Visibility="{Binding Room.CurrentPlayer.IsPlayerTurn, Converter={StaticResource NotBoolToVisibilityConverter}}">
                                <TextBlock Text="Ход соперника..." Style="{StaticResource FlatTextBlockStyle}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                    </Grid>
                </Border>
                <Border BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Background="{StaticResource BackgroundColorBrushDark}"
                        CornerRadius="12" Padding="10" Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FlatTextBlockStyle}" VerticalAlignment="Top">
                            <Run FontFamily="{StaticResource SegoeMDL2}" Text="&#xE125;" FontSize="16"/>
                            <Run Text="Игроки"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource FlatTextBlockStyle}" VerticalAlignment="Top" Grid.Column="1">
                            <Run FontFamily="{StaticResource SegoeMDL2}" Text="&#xE121;" FontSize="16"/>
                            <Run Text="Таймер"/>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding Room.Players}" VerticalAlignment="Top" Grid.Row="1">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,50,10">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="40" Height="40" CornerRadius="5" BorderThickness="1"
                            Background="{Binding PlayerIndex, Converter={StaticResource PlayerColorIndexConverter}}"
                            VerticalAlignment="Center" Margin="0,0,10,0" x:Name="plbadge">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                                                    <TextBlock Text="{Binding Score}" Style="{StaticResource FlatTextBlockStyle}" Foreground="White"
                                       Margin="0,0,0,0" FontSize="20" VerticalAlignment="Center" FontFamily="Segoe UI"  FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Border>
                                            <TextBlock Text="{Binding NickName}" VerticalAlignment="Center" FontWeight="Medium" MaxWidth="180" TextTrimming="CharacterEllipsis"
                               Style="{StaticResource SubHeaderTextBlockBlockStyle}" FontFamily="Segoe UI" FontSize="20"/>
                                            <TextBlock Text="&#xE129;" Foreground="{StaticResource WinBrush}" FontFamily="{StaticResource SegoeMDL2}" Margin="10,0,0,0"
                               Visibility="{Binding IsFinished, Converter={StaticResource BoolToVisConverter}}" VerticalAlignment="Center"
                               FontSize="20"/>
                                            <TextBlock Text="&#xE14A;" Foreground="{StaticResource Success}" FontFamily="{StaticResource SegoeMDL2}" Margin="10,0,0,0"
                               Visibility="{Binding IsPlayerTurn, Converter={StaticResource BoolToVisConverter}}" VerticalAlignment="Center"
                               FontSize="20"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        <Grid Grid.Column="1" Grid.Row="1">
                            <TextBlock Text="{Binding Room.TimeString}" Style="{StaticResource SubHeaderTextBlockBlockStyle2}"
                                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10" FontSize="42"
                                       Foreground="White"
                                       Visibility="{Binding Room.IsTimerStarted, Converter={StaticResource BoolToVisConverter}}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Ellipse Height="10" Width="10" Fill="{StaticResource Green}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"
                 Visibility="{Binding Room.IsConnectedToServer, Converter={StaticResource BoolToVisConverter}}"/>
        <Ellipse Height="10" Width="10" Fill="{StaticResource Danger}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"
                 Visibility="{Binding Room.IsConnectedToServer, Converter={StaticResource NotBoolToVisibilityConverter}}"/>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,25,0,0">
            <Button Content="&#xE72d;" Style="{StaticResource IconButtonStyleColored}"
                    Command="{Binding CopyRoomIdCommand}" Background="{StaticResource BlueAlpha20}" Foreground="{StaticResource Blue}"/>
        </StackPanel>

        <Grid Background="#90000000" Visibility="{Binding IsReconnecting, Converter={StaticResource BoolToVisConverter}}">
            <Border Height="200" Width="350" BorderBrush="{StaticResource BorderColorBrush}" CornerRadius="8"
                    Background="{StaticResource BackgroundBrush}" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Reconnecting..." Style="{StaticResource FlatTextBlockStyle}" Margin="0,0,0,20"/>
                    <cnt:SpinerControl IsActive="True" IsSmall="True" SpinerColor="{StaticResource AccentBrush}"/>
                    <Button Content="Cancel" Style="{StaticResource FlatTextButtonStyleNoArrow}" Margin="0,20,0,0"
                            Command="{Binding ReconnectCancelCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
