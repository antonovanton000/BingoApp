<Window x:Class="WheelTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="800">
    <Window.Resources>
        <Storyboard x:Key="RotateWheel">
            <DoubleAnimation Storyboard.TargetName="cnv"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0" To="0" Duration="0:0:5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Canvas Height="500" Width="500" RenderTransformOrigin="0.5,0.5" x:Name="cnv">
            <Canvas.RenderTransform>
                <RotateTransform Angle="0" />
            </Canvas.RenderTransform>
        </Canvas>
        <Path Data="M0,20 L20,0 L20,40 L0,20" Fill="Black" Stroke="Black" Stretch="Fill" StrokeThickness="1" StrokeLineJoin="Round" Height="25" Width="25" VerticalAlignment="Center"
              HorizontalAlignment="Center" Margin="0,0,-510,0"/>
        <!--<Path Data="M0,20 L20,0 L20,40 L0,20" Fill="Black" Stroke="Black" Stretch="Fill" StrokeThickness="1" StrokeLineJoin="Round" Height="25" Width="25" VerticalAlignment="Center"
              HorizontalAlignment="Center" Margin="0,-510,0,0" RenderTransformOrigin="0.5, 0.5">
            <Path.RenderTransform>
                <RotateTransform Angle="-90"/>
            </Path.RenderTransform>
        </Path>-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <Button Content="Start Rotation" Width="120" Height="30" Margin="0,0,10,0"
                Click="StartRotation_Click"/>
            <Button Content="Add Sector" Width="120" Height="30" Margin="0,0,10,0"
                Click="AddSector_Click"/>
            <Button Content="Remove Sector" Width="120" Height="30" Margin="0,0,10,0"
                Click="RemoveSector_Click"/>
            <Button Content="Set To 0" Width="120" Height="30" Margin="0,0,10,0"
                Click="SetToZero_Click"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" x:Name="tbxCurSector" FontWeight="Bold" VerticalAlignment="Bottom" Text="Current Sector:" Margin="10"/>
    </Grid>
</Window>
